#!/bin/sh

# Lambda Runtime wrapper for Custom OpenTelemetry Instrumentation
# This script is executed by AWS_LAMBDA_EXEC_WRAPPER

echo "ðŸš€ [otel-handler-custom] Starting Custom OpenTelemetry wrapper..."
echo "[otel-handler-custom] Handler: $1"
